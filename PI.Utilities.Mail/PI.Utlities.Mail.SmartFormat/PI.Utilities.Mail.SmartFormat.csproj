    <PackageId>PI.Utilities.Mail.SmartFormat</PackageId>
    <Authors>Pete Cleary</Authors>
    <Product>PI.Utilities.Mail.SmartFormat</Product>
    <AssemblyName>PI.Utilities.Mail.SmartFormat</AssemblyName>
    <RootNamespace>PI.Utilities.Mail.SmartFormat</RootNamespace>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PI.Utilities.Mail" Version="2.0.1" />
    <PackageReference Include="SmartFormat.NET" Version="2.3.0" />
  </ItemGroup>

</Project>
